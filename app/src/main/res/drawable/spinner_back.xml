 <selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item>

        <layer-list>

            <item android:height="30dp">
                <shape>
                    <gradient android:angle="90" android:endColor="#FFFFFF" android:startColor="#c8c8c8" android:type="linear" />

                    <stroke android:width="1dp" android:color="#396999" />

                    <corners android:radius="0dp" />

                    <padding android:bottom="3dp" android:left="3dp" android:right="15dp" android:top="3dp" />
                </shape>
            </item>

            <item>

                <bitmap android:gravity="center|right" android:src="@drawable/arrow"/>
            </item>

        </layer-list>

    </item>

</selector> 

